{
  "name": "english-cards",
  "version": "0.0.1",
  "homepage": "https://d4rkr00t.github.io/english-cards/",
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "cerebral": "^1.0.1",
    "cerebral-module-devtools": "^0.7.2",
    "cerebral-view-react": "^0.12.12",
    "cz-conventional-changelog": "^1.2.0",
    "eslint": "^3.4.0",
    "eslint-plugin-flowtype": "^2.11.4",
    "eslint-plugin-jsx-a11y": "^2.2.0",
    "eslint-plugin-react": "^6.2.0",
    "react-scripts": "0.2.3",
    "sw-precache": "^4.0.0",
    "uglify-js": "^2.7.3"
  },
  "dependencies": {
    "react": "^15.3.1",
    "react-dom": "^15.3.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "move:build": "rm -rf docs && mv build docs",
    "copy:manifest": "cp ./manifest.json ./docs/",
    "copy:data": "cp ./data.json ./docs/",
    "service-worker": "sw-precache --config=./sw-precache-config.json && uglifyjs docs/service-worker.js -o docs/service-worker.js",
    "build": "react-scripts build && npm run move:build && npm run copy:manifest && npm run copy:data",
    "postbuild": "npm run service-worker",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "./node_modules/react-scripts/config/eslint.js"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
